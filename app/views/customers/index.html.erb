<h1>Listing customers</h1>

<table border="1">
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Action</th>
  </tr>

<% @customers.each do |customer| %>
  <tr>
    <td><%= customer.id   %></td>
    <td><%= customer.name %></td>
    <td>
      <%= link_to 'Show', customer %>
      <%= link_to 'Edit', edit_customer_path(customer) %>
      <%= link_to 'Destroy', customer, confirm: 'Are you sure?', method: :delete %>
    </td>
    </tr>
<% end %>
</table>

<br />

<%= link_to 'New Customer', new_customer_path %>
